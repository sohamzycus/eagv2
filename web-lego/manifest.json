{
  "manifest_version": 3,
  "name": "Web Lego - Modular Page Composer",
  "version": "1.0.0",
  "description": "Pick pieces of any webpage and rearrange them in a clean canvas UI. Lego for the web!",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Lego",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["canvas.html", "styles.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
