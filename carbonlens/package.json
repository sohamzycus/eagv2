{
  "name": "carbonlens",
  "version": "1.0.0",
  "description": "Agentic emissions research & decision assistant Chrome extension powered by Google Gemini Flash 2.0",
  "main": "dist/background/service_worker.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "type-check": "tsc --noEmit",
    "test:unit": "jest",
    "test:integration": "playwright test",
    "test:integration:real": "USE_REAL_MODE=true playwright test",
    "ci": "npm run lint && npm run type-check && npm run test:unit && npm run test:integration",
    "clean": "rimraf dist"
  },
  "keywords": [
    "chrome-extension",
    "carbon-emissions",
    "ai-agent",
    "gemini",
    "sustainability",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.251",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/manifest.json"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
